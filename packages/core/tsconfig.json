{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@openflame/core": [
        "./src"
      ],
      "@openflame/auth": [
        "../auth/src"
      ],
      "@openflame/database": [
        "../database/src"
      ]
    },
    "stripInternal": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "es2015",
    "moduleResolution": "node",
    "noEmitOnError": false,
    // "noImplicitAny": true,
    "rootDir": "..",
    "outDir": "./release/tmp",
    "declaration": true,
//    "declarationDir": "./release/typings",
    "sourceMap": true,
    "inlineSources": false,
    "lib": [
      "es2015",
      "dom"
    ],
    "target": "es5",
    "pretty": true,
    "skipLibCheck": true,
    "importHelpers": true
  },
  "files": [
    "./src/index.ts",
    "./add/auth.ts",
    "./add/database.ts"
  ],
  "exclude": [
    "@openflame/core/**/*",
    "@openflame/auth/**/*",
    "@openflame/database/**/*",
    "../auth/**/*",
    "../database/**/*"
  ]
}
