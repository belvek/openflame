{
  "name": "@openflame/auth",
  "version": "0.0.6",
  "description": "Authentication component for Openflame: An alternative, RxJS-based SDK for Firebase",
  "author": "Josep Sayol <josep.sayol@gmail.com>",
  "main": "release/bundles/auth.umd.js",
  "module": "release/src/index.js",
  "typings": "release/src/index.d.ts",
  "license": "MIT",
  "scripts": {
    "build": "yarn run build:js && yarn run build:umd:dev && yarn run build:umd:prod",
    "build:js": "tsc -p tsconfig.json",
    "build:umd:dev": "cross-env NODE_ENV=dev webpack",
    "build:umd:prod": "cross-env NODE_ENV=production webpack -p",
    "clean": "rimraf release",
    "release": "cpy README.md ../../LICENSE ./release && node ../../utils/copy-package-json.js auth",
    "prebuild": "yarn run clean",
    "postbuild": "yarn run release",
    "publish": "cd release && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jsayol/openflame.git"
  },
  "dependencies": {
    "firebase": "3.7.0",
    "tslib": "^1.6.0"
  },
  "peerDependencies": {
    "@openflame/core": "0.0.6"
  },
  "devDependencies": {
    "@openflame/core": "0.0.6",
    "cpy-cli": "^1.0.1",
    "cross-env": "^3.2.3",
    "rimraf": "^2.6.1",
    "typescript": "^2.1.6",
    "webpack": "^2.2.1"
  }
}
